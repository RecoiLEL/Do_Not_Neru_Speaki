<Window x:Class="Spicky_don_t_neru.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spicky_don_t_neru"
        mc:Ignorable="d"
        Title="Don't Neru Speaki" Height="200" Width="200"
        WindowStyle ="None"
        Background="#01FFFFFF"
        AllowsTransparency="True"
        Topmost="True"
        ShowInTaskbar="False"
        
        Loaded="Window_Loaded"
>
    
    <Grid>
        <Image x:Name="Speaki"
               Source="/Assets/SpeakiStartup.png"
               Opacity="1"  
               RenderTransformOrigin="0.5,0.5"
               SnapsToDevicePixels="True"  UseLayoutRounding="True"
               
               MouseLeftButtonDown="Anim_OnMouseLeftButtonDouble"
               MouseRightButtonDown="OnMouseRightButtonDown">

            <Image.RenderTransform>
                <TransformGroup x:Name="SquishTransformGroup">
                    <ScaleTransform x:Name="SquishScaleTransform" ScaleX="0.75" ScaleY="0.75"/>
                    <TranslateTransform x:Name="CorrectionTranslateTransform" X="0" Y="0"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
